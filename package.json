{
  "name": "lyra-dev",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "precommit": "pnpm run lint:staged && pnpm run typecheck && pnpm test",
    "build": "pnpm run build:packages",
    "build:packages": "pnpm -r --filter '@lyra-dev/*' build",
    "clean": "rimraf \"packages/*/dist\"",
    "lint:staged": "lint-staged",
    "lint": "eslint \"packages/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc -b",
    "test": "vitest run --coverage --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=dot",
    "test:watch": "vitest",
    "dev": "pnpm --filter lyra-todos-example dev",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "vite": "5.4.20",
      "@types/node": "22.18.6"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "README.md": "prettier --write",
    "*.{md,json,yml,yaml}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "22.18.6",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.35.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.43.0",
    "vite": "5.4.20",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
