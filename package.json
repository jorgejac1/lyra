{
  "name": "lyra-dev",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "scripts": {
    "precommit": "pnpm run lint:staged && pnpm run typecheck && pnpm test",
    "build": "pnpm run build:packages",
    "build:packages": "pnpm -r --filter '@lyra-dev/*' build",
    "clean": "rimraf \"packages/*/dist\"",
    "lint:staged": "lint-staged",
    "lint": "eslint \"packages/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc -b",
    "test": "vitest run --coverage --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=dot",
    "test:watch": "vitest",
    "dev": "pnpm --filter lyra-todos-example dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "README.md": "prettier --write",
    "*.{md,json,yml,yaml}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
